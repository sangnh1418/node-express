extends ../layouts/common
block content
  .d-flex.my-5
    h2 User List
    a.btn.btn-primary.ml-3(href="/users/create") New

  form(action="/users/search",method="GET" class="d-flex")
    input(type="text" name="q" class="form-control")
    button(class="btn btn-primary ml-2") search
  table.table
    thead
      tr
        th(scope='col') #
        th(scope='col') Avatar
        th(scope='col') Name
        th(scope='col') Phone
        th(scope='col') Action
    tbody 
    each user in users
       tr
        th(scope='row')= user.id
          td  
            img(src=user.avatar , width="48")
          td=user.name
          td=user.phone
          td 
            a.btn.btn-info(href="/users/" + user.id) View