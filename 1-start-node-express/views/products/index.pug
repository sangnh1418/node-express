extends ../layouts/common
block content
  .d-flex.flex-row.flex-wrap.justify-content-center.mt-3 
    if productData && productData.length
      each product in productData
        .card.m-3(style='width: 14rem;')
          img.card-img-top(src=product.image, alt='Product Random')
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='/products/' + product.id) Detail