extends ../layouts/common
block content
  .d-flex.flex-row.flex-wrap.justify-content-center.mt-3 
    if productData && productData.length
      each product in productData
        .card.m-3(style='width: 14rem;')
          img.card-img-top(src=product.image, alt='Product Random')
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='/cart/add/' + product._id) Add to cart
  .d-flex.flex-row.flex-wrap.justify-content-center.mt-3           
    if pagination && pagination.length
      nav.my-3(aria-label='Page navigation example')
        ul.pagination
          if activePagination !== 1
            li.page-item
              a.page-link(href=`/products/?page=${activePagination - 1}`) Previous
          each item in pagination 
            if activePagination === item        
              li.page-item.active
                a.page-link(href=`/products/?page=${item}`)=item
            else    
              li.page-item
                  a.page-link(href=`/products/?page=${item}`)=item    
          li.page-item
            a.page-link(href=`/products/?page=${activePagination + 2}`) Next  
      